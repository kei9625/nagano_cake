<h1>Admin::Items#New 商品新規登録</h1>

<%= form_with model: @new_item, url: admin_items_path, method: :post do |f| %>

<h2>商品新規登録</h2>

<h4>商品画像</h4>
<%= f.file_field :image, accept: "image/*" %>

<h4>商品名</h4>
<%= f.text_field :name %>

<h4>商品説明</h4>
<%= f.text_area :introduction %>

<h4>税込価格</h4>
<%= f.text_area :price %>

<%= f.submit "新規登録" %>

<% end %>