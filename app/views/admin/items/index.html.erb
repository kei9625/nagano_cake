<div class="container">
  <div class="row">
      <div class="col-lg-8">
<h2>商品一覧</h2>
<table class="table table-striped">
    <thead>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
    </thead>

    <tbody>
    <% @all_item.each do |all| %>
    <tr>
        <td><%= all.id %></td>
        <td><%= link_to all.name, admin_item_path(all.id) %></td>
        <td><%= all.price.to_s(:delimited) %>円</td>
    </tr>
    <% end %>
    <%= paginate @all_item %>
    </tbody>
</table>
</div>
</div>
</div>