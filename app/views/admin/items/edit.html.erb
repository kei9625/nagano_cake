<h1>Admin::Items#edit 商品編集</h1>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

<h2>商品編集</h2>

<h4>商品画像</h4>
<%= f.file_field :image, accept: "image/*" %>

<h4>商品名</h4>
<%= f.text_field :name %>

<h4>商品説明</h4>
<%= f.text_area :introduction %>

<h4>税込価格</h4>
<%= f.text_area :price %>

<%= f.submit "変更を保存" %>

<% end %>