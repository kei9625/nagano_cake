<div class="container">
  <div class="row">

<h1>商品詳細</h1>
</div>
<div class="row">
<div class="col-lg-4">
<% if @item.image.attached? %>
<%= image_tag @item.image, size: "100x100" %>
<% else %>
<p>no-image</p>
<% end %>
</div>
<div class="col-lg-8">
<table class="table table-striped">
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>

  <tr>
    <td>税込価格<br>
    （税抜価格）</td>
    <td><%= @item.tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</td>
  </tr>

  <tr>
    <td><%= link_to "編集する", edit_admin_item_path(@item.id) %></td>
  </tr>
</table>

</div>
</div>
</div>
