<div class="container">
    <div class="row">
<h2>注文履歴一覧</h2>
</div>

  <div class="row">
<table>
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
        </tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
            <td><%= order.customer.full_name %></td>

            <td>
                <% @total_amount = 0 %>
                <% order.order_details.each do |order_detail| %>
                <% @total_amount = @total_amount + order_detail.amount %>
                <% end %>
                <%= @total_amount %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>