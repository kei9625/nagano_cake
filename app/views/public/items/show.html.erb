<h2>商品詳細</h2>

<%= image_tag @item.get_image(100,100) %>

<%= @item.name %>
<%= @item.introduction %>
<p><%= @item.tax_price.to_s(:delimited) %>円(税込)</p>

<%= form_with model:@cart_item_new, url: cart_items_path, local: true do |f| %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.select :amount, *[1..5] %>
    <%= f.submit "カートに入れる" %>
<% end %>