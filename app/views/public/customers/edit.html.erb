<h1>Public::Customers#edit　会員情報編集</h1>

  <!--form_with = データの送信。-->
  <%= form_with model: @customer, url:customers_information_path, method: :patch do |f| %>
  <p>氏名 <%= f.text_field :last_name %>&ensp;<%= f.text_field :first_name %></p>
  <p>カナ <%= f.text_field :last_name_kana %>&ensp;<%= f.text_field :first_name_kana %></p>
  <p>郵便番号 <%= f.text_field :postal_code %></p>
  <p>住所<%= f.text_field :address %></p>
  <p>電話番号 <%= f.text_field :telephone_number %></p>
  <p>メールアドレス <%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
  <%= f.submit '編集内容を保存' %>
  <%= link_to "退会する", customers_confirm_withdraw_path %>
  <% end %>

