<h1>Public::Orders#show</h1>

<h2>注文履歴詳細</h2>

<table>
  <h3>注文情報</h3>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>

    <tr>
      <td>配送先</td>
      <td><%= @order.address   %></td>
    </tr>

    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n   %></td>
    </tr>

  <h3>請求情報</h3>
    <tr>
      <td>商品合計</td>
      <td><%= @order.order_detail.cart_item.subtotal.to_s(:delimited)   %></td>
    </tr>

    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_fee.to_s(:delimited)  %></td>
    </tr>

    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_due.to_s(:delimited)   %></td>
    </tr>

</table>

<table>
  <h3>注文内容</h3>
