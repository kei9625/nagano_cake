<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <h2>新規会員登録</h2>
  <%= render "public/shared/error_messages", resource: resource %>
  <p>名前 <%= f.label :（姓） %><%= f.text_field :last_name %><%= f.label :（名） %><%= f.text_field :first_name %></p>
  <p>フリガナ <%= f.label :（セイ） %><%= f.text_field :last_name_kana %><%= f.label :（メイ） %><%= f.text_field :first_name_kana %></p>
  <p>郵便番号（ハイフンなし）<%= f.text_field :postal_code %></p>
  <p>住所<%= f.text_field :address %></p>
  <p>電話番号（ハイフンなし）<%= f.text_field :telephone_number %></p>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

  <h2>既に登録済みの方</h2>
  <p><%= link_to new_customer_session_path do %>
  こちら
  <% end %></p>
<% end %>

